var
  Form1: TForm1;
  txt,su,re,fer,k:String;
  t:integer;
  script:Textfile;
implementation

{$R *.dfm}

procedure TForm1.BitBtn1Click(Sender: TObject);
begin
Edit3.Text:=Edit1.Text+' Séconde';Edit1.Clear;
Edit4.Text:=Edit2.Text+' Séconde';Edit2.Clear;
Horloge.Show;
//BitBtn1.Enabled:=false;
end;

procedure TForm1.BitBtn2Click(Sender: TObject);
begin
Edit3.Clear;
Edit4.Clear;
Edit1.Clear;
Edit2.Clear;
end;

procedure TForm1.Edit1Change(Sender: TObject);
begin
Bitbtn1.Enabled:=false;
if Edit1.Text<>null then Bitbtn1.Enabled:=true else bitbtn1.Enabled:=false;
if Edit2.Text<>null then Bitbtn1.Enabled:=true else bitbtn1.Enabled:=false;
if Edit1.Text<>null then Bitbtn2.Enabled:=true else bitbtn1.Enabled:=false;
end;

procedure TForm1.FormCloseQuery(Sender: TObject; var CanClose: Boolean);
begin
if messagedlg('Voulez-vous déconnectez ?',mtconfirmation,[MbYes,MbNo],0)=MrYes then
begin
Canclose:=true;
application.Terminate;
end
else
canclose:=false;
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
Bitbtn1.Enabled:=false;
Edit3.Enabled:=false;
Edit4.Enabled:=false;
label3.Visible:=false;
Edit4.Visible:=false;
edit2.Visible:=false;
end;

procedure TForm1.RadioButton1Click(Sender: TObject);
begin
if Radiobutton1.Checked then edit1.Visible:=true;edit2.Visible:=false;
label2.Visible:=true;edit3.Visible:=true;label3.Visible:=false;edit4.Visible:=false;

end;

procedure TForm1.RadioButton2Click(Sender: TObject);
begin
 if RadioButton2.Checked then edit2.Visible:=true;Edit1.Visible:=false;
 label2.Visible:=false;edit3.Visible:=false;
 label3.Visible:=true;Edit4.Visible:=true;
end;

procedure TForm1.Timer1Timer(Sender: TObject);
begin
if label1.left> -200 then
label1.Left :=label1.Left-1
else
label1.Left:=700;
end;

procedure TForm1.Timer2Timer(Sender: TObject);
begin
label8.Caption:=timetostr(time);
end;

procedure TForm1.Timer3Timer(Sender: TObject);
begin
label5.Caption:='Nous sommes :'+datetostr(date)+' à '+timetostr(time);
end;

procedure TForm1.Timer6Timer(Sender: TObject);
begin
label10.Caption:='Nous sommes :'+datetostr(date)+' à '+timetostr(time);
end;

end.
