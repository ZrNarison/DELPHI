procedure TForm1.FormCloseQuery(Sender: TObject; var CanClose: Boolean);
begin
if MessageDlg('Voulez-vous quitter l application ?',MtConfirmation,[MbYes,MbNo],0)=MrYes then
  begin
    canclose:=true;
    application.Terminate;
  end
  else
  canclose:=false;
end;

