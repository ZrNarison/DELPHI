unit Unit2;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, Menus, jpeg, ExtCtrls, StdCtrls;

type
  TForm2 = class(TForm)
    MainMenu1: TMainMenu;
    Fichier1: TMenuItem;
    Edition1: TMenuItem;
    Quitter1: TMenuItem;
    Journale1: TMenuItem;
    N1: TMenuItem;
    Aide1: TMenuItem;
    Help1: TMenuItem;
    Nouveau1: TMenuItem;
    Timer1: TTimer;
    Label1: TLabel;
    procedure FormCloseQuery(Sender: TObject; var CanClose: Boolean);
    procedure Quitter1Click(Sender: TObject);
    procedure Nouveau1Click(Sender: TObject);
    procedure Timer1Timer(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form2: TForm2;

implementation

uses Unit3, Unit4;

{$R *.dfm}

procedure TForm2.FormCloseQuery(Sender: TObject; var CanClose: Boolean);
begin
if messagedlg('Voulez-vous vraiment fermer cette fenêtre ?',MtConfirmation,[MbYES,MbNO],0)=MrYes then
begin
  canclose:=true;
  form2.Close;
end
else
canclose:=false;
end;

procedure TForm2.Nouveau1Click(Sender: TObject);
begin
Form3.ShowModal;
end;

procedure TForm2.Quitter1Click(Sender: TObject);
begin
form2.Close;
end;

procedure TForm2.Timer1Timer(Sender: TObject);
begin
Label1.Caption:=Timetostr(time);
end;

end.
